@page "/oneway-binding"
@layout HomeMasterPage
<h1 class="container">
    Databinding
    <br/>
    <span class="badge bg-success">Helloooooooooooooo @name @Sumscore(1220, 5)</span>
    <br/>
    <span class="badge bg-danger">Sumscore: @Sumscore(11111, 5)</span>
    <br/>
    <span class="badge bg-primary">Count: @count</span>
    <button class="btn btn-primary" @onclick="ChangeCount">+</button>
</h1>

@code{
    private string name {get; set;} = "Kh√¥i";

    private int count{get; set;} = 1;

    private int Sumscore(int a, int b)
    {
        return a + b;
    }
    
    private void ChangeCount(){
        count++;
    }
}