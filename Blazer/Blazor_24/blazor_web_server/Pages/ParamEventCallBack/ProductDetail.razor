    {   
        Console.WriteLine(JsonSerializer.Serialize(prdClick)); //chuyển object thành string
        prdDetailState = prdClick;
    }

    ProductCardVM prdDetailState = new ProductCardVM () {ID = "1", Name = "Iphone", Price = "1000$", Image = "https://picsum.photos/id/1/200/200"};
