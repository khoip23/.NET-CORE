@page "/product-detail"
@layout HomeMasterPage

<div class="container">
    <h3>product-List</h3>

    <div class="row">
        @foreach (ProductCardVM product in lstProduct)
        {
            <div class="col-4">
                <ProductCard prod = "@product" eventViewDetail="ViewDetail"/>
                @* <div class="card">
                    <img src="@product.Image" alt="..."/>
                    <div class="card-body">
                        <h3 class="card-title">@product.Name</h3>
                        <div class="card-text">@product.Price</div>
                        <button class="btn btn-success" @onclick="@(e => ViewDetail(@product))">Detail</button>
                    </div>
                </div> *@
            </div>
        }
    </div>
    <hr/>
    <div class="mt-2 row">
        <div class="col-3">
            <h3>Iphone</h3>
            <img src="@prdDetailState.Image" alt="..."/>
        </div>
        <div class="col-9">
            <h3>Product Detail</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <td>@prdDetailState.ID</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@prdDetailState.Name</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>@prdDetailState.Price</td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

